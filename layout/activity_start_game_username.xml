<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_start_game_username"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.guessit.guessit.StartGameUsername">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell your friends the 4 digits GameCode\nto join the game."
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/textView8"
        android:layout_above="@+id/usernamefield"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernamefield"
        android:width="300dp"
        android:textSize="30dp"
        android:hint="Enter Username"
        android:gravity="center"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/checkusername2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check username"
        android:id="@+id/checkusername2"
        android:width="300dp"
        android:onClick="checkusername"
        android:layout_above="@+id/gotofaction"
        android:layout_alignLeft="@+id/usernamefield"
        android:layout_alignStart="@+id/usernamefield" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a faction"
        android:id="@+id/gotofaction"
        android:width="300dp"
        android:onClick="gotoFaction"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/checkusername2"
        android:layout_alignStart="@+id/checkusername2" />

    <TextView
        android:text="Gamecode:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gamecode_view"
        android:fontFamily="sans-serif"
        android:textSize="36sp"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>