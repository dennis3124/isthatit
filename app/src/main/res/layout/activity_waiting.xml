<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_waiting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guessit.guessit.Waiting">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/hero3"
        android:id="@+id/imageButton19"
        android:layout_below="@+id/imageButton17"
        android:layout_toLeftOf="@+id/imageButton24"
        android:layout_toStartOf="@+id/imageButton24"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="14dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/hero8"
        android:id="@+id/imageButton24"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/imageButton20"
        android:layout_alignLeft="@+id/imageButton22"
        android:layout_alignStart="@+id/imageButton22" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/hero5"
        android:id="@+id/imageButton21"
        android:layout_alignTop="@+id/imageButton24"
        android:layout_alignLeft="@+id/imageButton19"
        android:layout_alignStart="@+id/imageButton19" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/hero7"
        android:id="@+id/imageButton23"
        android:layout_below="@+id/imageButton21"
        android:layout_alignLeft="@+id/imageButton21"
        android:layout_alignStart="@+id/imageButton21" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/hero4"
        android:id="@+id/imageButton20"
        android:layout_alignTop="@+id/imageButton19"
        android:layout_alignLeft="@+id/imageButton24"
        android:layout_alignStart="@+id/imageButton24" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/hero2"
        android:id="@+id/imageButton18"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/imageButton20"
        android:layout_alignStart="@+id/imageButton20" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/hero6"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/imageButton22"
        android:layout_below="@+id/imageButton21"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:width="300dp"
        android:onClick="goToGame"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for all players ..."
        android:textSize="30dp"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/hero1"
        android:id="@+id/imageButton17"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/imageButton19"
        android:layout_alignStart="@+id/imageButton19" />
</RelativeLayout>